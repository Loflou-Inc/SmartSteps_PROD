# Testing Environment Configuration

# API Settings
ENVIRONMENT=testing
DEBUG=False
API_HOST=localhost
API_PORT=9501
API_SECRET_KEY=test-secret-key-for-testing-only
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Database Settings
DATABASE_TYPE=sqlite
DATABASE_PATH=:memory:

# AI Provider Settings
DEFAULT_PROVIDER=mock
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# Memory System Settings
MEMORY_SYSTEM_ENABLED=false
MEMORY_STORE_PATH=./data/test_memory
MEMORY_MAX_ENTRIES=100

# Logging Settings
LOG_LEVEL=DEBUG
LOG_FILE=./logs/smart_steps_test.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Persona Settings
PERSONA_DIR=./data/test_personas
DEFAULT_PERSONA=test_therapist

# Session Settings
SESSION_TIMEOUT=600
SESSION_STORAGE_PATH=./data/test_sessions

# Security Settings
JWT_ALGORITHM=HS256
JWT_EXPIRY=3600
PASSWORD_HASH_ITERATIONS=1000
RATE_LIMIT_REQUESTS=9999
RATE_LIMIT_TIMEFRAME=60

# Cache Settings
CACHE_ENABLED=false
CACHE_TTL=1
MEMORY_CACHE_SIZE=10
DISK_CACHE_PATH=./data/test_cache

# Analytics Settings
ANALYTICS_ENABLED=false
ANALYTICS_STORAGE_PATH=./data/test_analytics
