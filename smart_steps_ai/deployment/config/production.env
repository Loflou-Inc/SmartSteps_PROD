# Production Environment Configuration

# API Settings
ENVIRONMENT=production
DEBUG=False
API_HOST=0.0.0.0
API_PORT=9500
API_SECRET_KEY=your-production-secret-key
ALLOWED_ORIGINS=https://smartsteps.example.com,https://admin.smartsteps.example.com

# Database Settings
DATABASE_TYPE=sqlite
DATABASE_PATH=/app/data/smart_steps.db

# AI Provider Settings
DEFAULT_PROVIDER=anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# Memory System Settings
MEMORY_SYSTEM_ENABLED=true
MEMORY_STORE_PATH=/app/data/memory_store
MEMORY_MAX_ENTRIES=10000

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=/app/logs/smart_steps.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Persona Settings
PERSONA_DIR=/app/data/personas
DEFAULT_PERSONA=jane

# Session Settings
SESSION_TIMEOUT=3600
SESSION_STORAGE_PATH=/app/data/sessions

# Security Settings
JWT_ALGORITHM=HS256
JWT_EXPIRY=86400
PASSWORD_HASH_ITERATIONS=100000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_TIMEFRAME=60

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600
MEMORY_CACHE_SIZE=1000
DISK_CACHE_PATH=/app/data/cache

# Analytics Settings
ANALYTICS_ENABLED=true
ANALYTICS_STORAGE_PATH=/app/data/analytics
