# Development Environment Configuration

# API Settings
ENVIRONMENT=development
DEBUG=True
API_HOST=localhost
API_PORT=9500
API_SECRET_KEY=dev-secret-key-for-testing-only
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Database Settings
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/smart_steps_dev.db

# AI Provider Settings
DEFAULT_PROVIDER=mock
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# Memory System Settings
MEMORY_SYSTEM_ENABLED=true
MEMORY_STORE_PATH=./data/memory_store
MEMORY_MAX_ENTRIES=5000

# Logging Settings
LOG_LEVEL=DEBUG
LOG_FILE=./logs/smart_steps_dev.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Persona Settings
PERSONA_DIR=./data/personas
DEFAULT_PERSONA=test_therapist

# Session Settings
SESSION_TIMEOUT=3600
SESSION_STORAGE_PATH=./data/sessions

# Security Settings
JWT_ALGORITHM=HS256
JWT_EXPIRY=86400
PASSWORD_HASH_ITERATIONS=10000
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_TIMEFRAME=60

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=60
MEMORY_CACHE_SIZE=100
DISK_CACHE_PATH=./data/cache

# Analytics Settings
ANALYTICS_ENABLED=true
ANALYTICS_STORAGE_PATH=./data/analytics
