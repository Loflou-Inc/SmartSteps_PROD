# Smart Steps AI Configuration
# Copy this file to .env and fill in the values

# General Configuration
APP_NAME=Smart Steps AI
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# AI Provider Configuration
DEFAULT_PROVIDER=anthropic  # anthropic, openai, local_llm

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=2000

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Local LLM Configuration
LOCAL_LLM_MODEL_PATH=/path/to/your/local/model
LOCAL_LLM_CONTEXT_SIZE=4096
LOCAL_LLM_TEMPERATURE=0.7

# Memory Configuration
MAX_RELEVANT_MEMORIES=5

# Session Configuration
SESSION_TIMEOUT=3600  # 1 hour in seconds
MAX_SESSION_HISTORY=100

# Analysis Configuration
DEFAULT_ANALYSIS_TYPE=full  # full, brief, insights, progress, patterns, summary
